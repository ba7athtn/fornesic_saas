{
  "name": "ba7ath-forensic-backend",
  "version": "1.0.0",
  "description": "Backend forensique (images, EXIF, analyse, PDF) pour Ba7ath",
  "private": true,
  "main": "server.js",
  "type": "commonjs",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=production node server.js",
    "dev": "cross-env NODE_ENV=development nodemon server.js",
    "test": "jest --rootDir .",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:config": "jest tests/configWiring.static.spec.js --runInBand",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prepare": "husky install",
    "test:ci": "jest --detectOpenHandles --forceExit --rootDir ."
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4",
    "bcrypt": "^6.0.0",
