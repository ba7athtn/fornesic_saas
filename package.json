    "@babel/core": "^7.28.4",
    "@babel/plugin-transform-runtime": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "babel-jest": "^30.1.2",
    "eslint": "^9.0.0",
    "fast-glob": "^3.3.3",
    "husky": "^9.0.0",
