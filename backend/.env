# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Redis (Cache & Sessions)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=your-redis-password

# Upload Directories
UPLOAD_TEMP_DIR=./uploads/temp
UPLOAD_PROCESSED_DIR=./uploads/processed
UPLOAD_QUARANTINE_DIR=./uploads/quarantine

# Analyse Forensique
FORENSIC_CACHE_TTL=7200
MAX_ANALYSIS_TIME=300000
AI_DETECTION_ENABLED=true
HEAVY_ANALYSIS_ENABLED=true
ALLOWED_FORMATS=jpg,jpeg,png,tiff,tif,webp,raw,dng,cr2,nef,arw,orf,bmp,gif

# Email Configuration (pour notifications)
# SMTP_HOST=smtp.mailtrap.io
# SMTP_PORT=587
# SMTP_USER=your-smtp-username
# SMTP_PASS=your-smtp-password
# FROM_EMAIL=noreply@ba7ath.com
# FROM_NAME=Ba7ath Forensic

# Security & Monitoring
LOG_LEVEL=info
REQUEST_TIMEOUT=60000
SESSION_CLEANUP_INTERVAL=3600000

# API Configuration
API_VERSION=3.0.0
API_PREFIX=/api

# Development Tools (DEV ONLY)
DEBUG_ROUTES=false
DEBUG_UPLOADS=true
DEBUG_AUTH=true
DEBUG_VALIDATION=false
